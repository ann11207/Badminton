<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"

    tools:context=".View.Admin.Setting.StatisticalBill.item_invoice">
<TextView
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hoá đơn"
    android:textStyle="bold"
    android:layout_margin="10dp"
    android:textSize="20sp">
</TextView>
    <TextView
        android:id="@+id/textViewInvoiceCourt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sân: "
        android:layout_margin="10dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/textViewInvoiceTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng giá: "
        android:textSize="16sp"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/textViewInvoicePlayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian chơi: "
        android:textSize="16sp"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/textViewInvoiceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: "
        android:textSize="16sp"/>
</LinearLayout>