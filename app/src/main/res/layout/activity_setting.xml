<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Admin.Setting.Setting">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_back"></ImageButton>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:columnCount="4"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_editInfo"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/useredit"
                android:backgroundTint="@color/black">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Tài khoản"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_manageCourt"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/stadium"
                android:backgroundTint="@color/black">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Quản lý sân"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_manageCustomer"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/customer"
                android:backgroundTint="@color/black">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Tạo đối tượng "
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_Bill"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/payment"
                android:backgroundTint="@color/black">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Hoá đơn"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/calanda"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/calendar"
                android:backgroundTint="@color/black">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Lịch đặt sân chi tiết"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/product"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/products"
                android:backgroundTint="@color/black">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sản phẩm"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>
        </LinearLayout>
    </GridLayout>

</LinearLayout>