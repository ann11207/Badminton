<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Admin.GridViewCourt"
    android:orientation="vertical">
    <ImageView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/imgViewCourt1"
        android:src="@drawable/ic_yard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textViewNameCourt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sân"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="4dp"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textViewStatusCourt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái sân"
        android:textSize="14sp"
        android:paddingTop="2dp"/>

</LinearLayout>